<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bootstrap="http://schemas.android.com/apk/res-auto"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.finding.main.FindingActivity" >
            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="20px"
                android:textSize="14pt"
                android:text="防走失信息卡" />
            
           <com.beardedhen.androidbootstrap.BootstrapEditText
                 android:id="@+id/bootstrapText1"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                  android:layout_below="@id/textView1"
                  android:layout_marginBottom="20px"
                 android:hint="姓 名" 
                 android:gravity="center"

            />
                      <com.beardedhen.androidbootstrap.BootstrapEditText
                 android:id="@+id/bootstrapText2"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                  android:layout_below="@id/bootstrapText1"
                  android:layout_alignParentLeft="true"
                  android:layout_marginBottom="20px"
                 android:hint="住 址" 
                 android:gravity="center"

            />           <com.beardedhen.androidbootstrap.BootstrapEditText
                 android:id="@+id/bootstrapText3"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:inputType="number"
                  android:layout_below="@id/bootstrapText2"
                  android:layout_alignParentLeft="true"
                  android:layout_marginBottom="20px"
                 android:hint="通 知 手 机" 
                 android:gravity="center"

            />
            
             <com.beardedhen.androidbootstrap.BootstrapEditText
                 android:id="@+id/bootstrapText4"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:inputType="number"
                  android:layout_below="@id/bootstrapText3"
                  android:layout_alignParentLeft="true"
                  android:layout_marginBottom="20px"
                 android:hint="报 警 距 离" 
                 android:gravity="center"

            />
             
            <com.gc.materialdesign.views.ButtonRectangle
                android:id="@+id/finding_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/bootstrapText4"
                android:layout_marginTop="100px"
                android:background="#1E88E5"
                android:text="开启防走失" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bootstrapText4"
                android:layout_marginBottom="20px"
                android:textSize="8pt"
                android:text="点击开启防走失功能后，如您离开现在的位置太远，将告知您填写的手机号码" />


                <requestFocus />


</RelativeLayout>
