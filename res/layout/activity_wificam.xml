<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
     >
    
     <TextView
       android:id="@+id/text"
       android:layout_width="fill_parent"  
       android:layout_height="wrap_content"    
       android:layout_centerHorizontal="true"

    />
      
       <ImageView
           android:layout_marginTop="36dp"
           android:id="@+id/imageView"
           android:layout_width="400dp"
           android:layout_height="400dp" />

    <ImageButton
        android:id="@+id/goButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="14dp"
        android:background="#00000000"
        android:src="@drawable/go1" />

    <ImageButton
        android:id="@+id/quitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/goButton"
        android:background="#00000000"
        android:src="@drawable/quit1" />

    <ImageButton
        android:id="@+id/ledButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/quitButton"
        android:layout_toLeftOf="@+id/quitButton"
        android:background="#00000000"
        android:src="@drawable/ledon" />

</RelativeLayout>
