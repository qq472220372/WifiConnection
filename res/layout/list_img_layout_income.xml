<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:layout_marginTop="10px"
  android:layout_marginRight="10px"
  >
    <ImageView
      android:layout_width="42px"
      android:layout_height="42px"
      android:layout_gravity="bottom"
      android:id="@+id/messagegedetail_rov_icon2"
      android:background="@drawable/retouxiang"
  />
  <LinearLayout
      android:orientation="vertical"
      android:layout_width="300px"
      android:layout_height="wrap_content"
      android:background="@drawable/incoming"
  >    
      <LinearLayout
          android:orientation="horizontal"
	      android:layout_width="fill_parent"
	      android:layout_height="22dip"
      >
          <TextView
              android:id="@+id/messagedetail_row_name2"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="#000000"
              android:paddingTop="2px"
              android:textSize="16dip"
          />
          <TextView
              android:id="@+id/messagedetail_row_date2"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="#000000"
              android:paddingTop="2px"
              android:textSize="16dip"
              android:layout_marginLeft="60dip"
          />
          </LinearLayout>
<ImageView 
    android:id="@+id/img_rec2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"/>
<ProgressBar
    android:id="@+id/progressBar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="?android:attr/progressBarStyleHorizontal"
    android:visibility="gone"/> "
  </LinearLayout>

</LinearLayout>
